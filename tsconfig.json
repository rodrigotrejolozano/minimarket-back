{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "Node16",
        "allowJs": true,
        "checkJs": false,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}